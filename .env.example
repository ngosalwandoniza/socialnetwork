# ====================
# Django Core Settings
# ====================
DJANGO_SECRET_KEY=your-secret-key-here
DJANGO_DEBUG=False
DJANGO_ALLOWED_HOSTS=yourapp.com,api.yourapp.com

# ====================
# CORS Configuration
# ====================
# Comma-separated list of allowed origins (leave empty for development mode)
CORS_ALLOWED_ORIGINS=https://yourapp.com,https://www.yourapp.com

# ====================
# Database
# ====================
# For production, use PostgreSQL:
DB_ENGINE=django.db.backends.postgresql
# DB_NAME=socialnetwork
# DB_USER=youruser
# DB_PASSWORD=yourpassword
# DB_HOST=localhost
# DB_PORT=5432
# Alternatively, use a connection URL:
# DJANGO_DATABASE_URL=postgres://user:pass@host:port/dbname

# ====================
# Firebase/FCM (Push Notifications)
# ====================
# FCM_SERVER_KEY=your-firebase-server-key

# ====================
# Media Storage (S3/Cloud optional)
# ====================
USE_AWS_S3=False
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_STORAGE_BUCKET_NAME=your-bucket-name
# AWS_S3_REGION_NAME=us-east-1
